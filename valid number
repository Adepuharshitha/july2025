class Solution(object):
    def isNumber(self, s):
        s=s.strip()
        seen_e=seen_dot=seen_digit=False
        for i,char in enumerate(s):
            if char.isdigit():
                seen_digit=True
            elif char in['+','-']:
                if i>0 and s[i-1].lower()!='e':
                    return False
            elif char in['e','E']:
                if seen_e or not seen_digit:
                    return False
                seen_e=True
                seen_digit=False
            elif char=='.':
                if seen_dot or seen_e:
                    return False
                seen_dot=True
            else:
                return False
        return seen_digit
